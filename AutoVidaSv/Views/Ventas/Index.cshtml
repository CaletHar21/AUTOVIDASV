@model IEnumerable<AutoVidaSv.Models.Venta>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Autoid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fechaventa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valorventa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Autoid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fechaventa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valorventa)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Ventaid">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Ventaid">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Ventaid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
