@model IEnumerable<AutoVidaSv.Models.Albumcar>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Imagen</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="data:image;base64,@item.Imagen" alt="Imagen" style="max-width: 100px; max-height: 100px;" />
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Albumcarid">Edit</a> |
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Albumcarid">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Albumcarid">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
