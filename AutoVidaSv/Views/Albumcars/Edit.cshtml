@model AutoVidaSv.Models.Albumcar

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Albumcar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Albumcarid" />

            <div class="form-group">
                <label asp-for="Imagen" class="control-label">Imagen Actual:</label><br />
                @if (!string.IsNullOrEmpty(Model.Imagen))
                {
                    <img src="data:image;base64,@Model.Imagen" alt="Imagen Actual" style="max-width: 300px; max-height: 300px;" />
                }
                else
                {
                    <span>No hay imagen disponible</span>
                }
            </div>

            <div class="form-group">
                <label class="control-label">Cambiar Imagen:</label>
                <input type="file" id="imageUpload" name="nuevaImagen" accept="image/*" class="form-control" />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
